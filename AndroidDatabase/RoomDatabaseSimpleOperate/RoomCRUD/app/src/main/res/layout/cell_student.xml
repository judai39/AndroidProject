<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/white"
                                                   android:layout_height="wrap_content" android:id="@+id/cell_layout">
    <TextView
            android:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/student_name"
            app:layout_constraintEnd_toStartOf="@+id/student_classmate"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/student_classmate"/>
    <TextView
            android:text="classmate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/student_classmate"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline4" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/student_age"
            app:layout_constraintStart_toEndOf="@+id/student_classmate"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/student_classmate"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                app:layout_constraintGuide_percent="0.15"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                app:layout_constraintGuide_percent="0.54"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                app:layout_constraintGuide_percent="0.95"
                                                android:orientation="vertical"/>
    <TextView
            android:text="id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/student_id"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>