<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".upgrade_fragment.FillMessageFragment">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fill_name_edit"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.317"/>
    <TextView
            android:text="您想修改成?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:layout_marginBottom="76dp"
            app:layout_constraintBottom_toTopOf="@+id/fill_name_edit"
            app:layout_constraintStart_toStartOf="@+id/fill_name_edit"
            app:layout_constraintEnd_toEndOf="@+id/fill_name_edit" android:textSize="24sp" android:textColor="#00838F"/>
    <Button
            android:text="确认"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fill_name_btn_confirm"
            app:layout_constraintStart_toStartOf="@+id/fill_name_edit"
            app:layout_constraintEnd_toEndOf="@+id/fill_name_edit" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/fill_name_edit"
            app:layout_constraintHorizontal_bias="0.496"/>
</androidx.constraintlayout.widget.ConstraintLayout>