<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".upgrade_fragment.UpgradeFragment">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/upgrade_edit"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.23000002" app:layout_constraintHorizontal_bias="0.41"/>
    <TextView
            android:text="请输入您想修改的学生id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
    <Button
            android:text="确定"
            android:layout_width="69dp"
            android:layout_height="52dp" android:id="@+id/upgrade_btn_select"
            app:layout_constraintBaseline_toBaselineOf="@+id/upgrade_edit"
            app:layout_constraintStart_toEndOf="@+id/upgrade_edit"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upgrade_edit"
            android:id="@+id/to_upgrade_student_layout" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:visibility="invisible">

        <TextView
                android:text="同学"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/stu_classmate_text"
                app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"/>
        <ImageView
                android:src="@drawable/ic_protrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.17" app:layout_constraintVertical_bias="0.39"/>
        <TextView
                android:text="年龄"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/stu_age_text"
                app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.67"/>
        <TextView
                android:text="姓名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/stu_name_text"
                app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.33"/>
        <TextView
                android:text="点击您想修改的学生信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageView" android:layout_marginBottom="80dp"
                android:textSize="24sp"/>
        <TextView
                android:text="学号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/stu_id_text"
                app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@+id/imageView"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/upgrade_stu_id"
                app:layout_constraintTop_toTopOf="@+id/stu_id_text"
                app:layout_constraintStart_toEndOf="@+id/stu_id_text" android:layout_marginStart="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/upgrade_stu_name"
                app:layout_constraintTop_toTopOf="@+id/stu_name_text"
                app:layout_constraintStart_toEndOf="@+id/stu_name_text" android:layout_marginStart="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/upgrade_stu_age"
                app:layout_constraintTop_toTopOf="@+id/stu_age_text"
                app:layout_constraintStart_toEndOf="@+id/stu_age_text" android:layout_marginStart="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/upgrade_stu_classmate"
                app:layout_constraintTop_toTopOf="@+id/stu_classmate_text"
                app:layout_constraintStart_toEndOf="@+id/stu_classmate_text" android:layout_marginStart="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>